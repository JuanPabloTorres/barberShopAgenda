generator client {
  provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url = env("DATABASE_URL")
}

// Enums
enum UserRole {
	ADMIN
	BARBER
}

enum AppointmentStatus {
	BOOKED
	CANCELLED
	DONE
}

// User model (barber or admin)
model User {
	id           String   @id @default(cuid())
	name         String
	email        String   @unique
	passwordHash String
	role         UserRole
	isActive     Boolean  @default(true)
	createdAt    DateTime @default(now())
	updatedAt    DateTime @updatedAt
	schedules    BarberWeeklySchedule[]
	breaks       BarberWeeklyBreak[]
	timeOff      BarberTimeOff[]
	appointments Appointment[] @relation("BarberAppointments")
	// NextAuth relations
	accounts     Account[]
	sessions     Session[]
}

model Service {
	id         String   @id @default(cuid())
	name       String
	price      Int      // cents
	durationMin Int
	isActive   Boolean  @default(true)
	createdAt  DateTime @default(now())
	updatedAt  DateTime @updatedAt
	appointments Appointment[]

	@@unique([name])
}

model Appointment {
	id         String   @id @default(cuid())
	barber     User     @relation("BarberAppointments", fields: [barberId], references: [id])
	barberId   String
	service    Service  @relation(fields: [serviceId], references: [id])
	serviceId  String
	startAt    DateTime
	endAt      DateTime
	clientName String
	clientPhone String
	clientEmail String
	status     AppointmentStatus @default(BOOKED)
	createdAt  DateTime @default(now())
	updatedAt  DateTime @updatedAt

	@@index([barberId, startAt])
	@@index([barberId, status, startAt])
}

model BarberWeeklySchedule {
	id        String   @id @default(cuid())
	barber    User     @relation(fields: [barberId], references: [id])
	barberId  String
	dayOfWeek Int      // 0 (Sunday) - 6 (Saturday)
	startTime String   // "HH:MM"
	endTime   String   // "HH:MM"
	isClosed  Boolean  @default(false)

	@@unique([barberId, dayOfWeek])
}

model BarberWeeklyBreak {
	id        String   @id @default(cuid())
	barber    User     @relation(fields: [barberId], references: [id])
	barberId  String
	dayOfWeek Int      // 0 (Sunday) - 6 (Saturday)
	startTime String   // "HH:MM"
	endTime   String   // "HH:MM"
	label     String?

	@@unique([barberId, dayOfWeek])
}

model BarberTimeOff {
	id        String   @id @default(cuid())
	barber    User     @relation(fields: [barberId], references: [id])
	barberId  String
	date      String   // "YYYY-MM-DD"
	isAllDay  Boolean  @default(false)
	startTime String?
	endTime   String?
	reason    String?
}

// NextAuth models (Prisma Adapter)
model Account {
	id                 String  @id @default(cuid())
	userId             String
	type               String
	provider           String
	providerAccountId  String
	refresh_token      String?
	access_token       String?
	expires_at         Int?
	token_type         String?
	scope              String?
	id_token           String?
	session_state      String?
	user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

	@@unique([provider, providerAccountId])
}

model Session {
	id           String   @id @default(cuid())
	sessionToken String   @unique
	userId       String
	expires      DateTime
	user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
	identifier String
	token      String   @unique
	expires    DateTime

	@@unique([identifier, token])
}
